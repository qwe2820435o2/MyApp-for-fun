<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <FrameLayout 
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>
	<RadioGroup 
	    android:id="@+id/rg"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:background="@drawable/iv_bottom_tab_bg"
	    >
	    <RadioButton 
	        android:id="@+id/rb_first"
	        style="@style/ratiobutton_style"
	        android:drawableTop="@drawable/firstpage_tab_selector"
	        android:text="主页"
	        />
	    <RadioButton 
	        android:id="@+id/rb_second"
	        style="@style/ratiobutton_style"
	        android:drawableTop="@drawable/secondpage_tab_selector"
	        android:text="新闻"
	        />
	    <RadioButton 
	        android:id="@+id/rb_third"
	        style="@style/ratiobutton_style"
	        android:drawableTop="@drawable/thirdpage_tab_selector"
	        android:text="政务"
	        />
	    <RadioButton 
	        android:id="@+id/rb_four"
	        style="@style/ratiobutton_style"
	        android:drawableTop="@drawable/fourpage_tab_selector"
	        android:text="设置"
	        />
	</RadioGroup>
</LinearLayout>