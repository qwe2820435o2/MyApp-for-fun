<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:case="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	 <com.astuetz.PagerSlidingTabStripExtends
        android:id="@+id/first_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        case:pstsIndicatorColor="@color/tab_indicator_selected"
        case:pstsSelectedTabTextColor="@color/tab_text_selected"
        case:pstsTabTextColor="@color/tab_text_normal"
        case:pstsTabTextSize="14sp"
        case:pstsSelectedTabTextSize="15sp"
	    />
	 <android.support.v4.view.ViewPager
        android:id="@+id/first_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </android.support.v4.view.ViewPager>
</LinearLayout>